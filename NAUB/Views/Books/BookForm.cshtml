@model NAUB.Models.Book
@{
    ViewBag.Title = "BookForm";
}

<div id="content">
    <header>Books details</header>
    <article>
        @using (Html.BeginForm("SaveBook", "Books"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <div class="row">
               

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Isbn)
                        @Html.TextBoxFor(m => m.Isbn, new {@class = "form-control", @autofocus = true})
                        @Html.ValidationMessageFor(m => m.Isbn)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Title)
                        @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Title)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Author1)
                        @Html.TextBoxFor(m => m.Author1, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Author1)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Author2)
                        @Html.TextBoxFor(m => m.Author2, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Author3)
                        @Html.TextBoxFor(m => m.Author3, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Publisher)
                        @Html.TextBoxFor(m => m.Publisher, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Publisher)
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Edition)
                        @Html.TextBoxFor(m => m.Edition, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Edition)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PublicationYear)
                        @Html.TextBoxFor(m => m.PublicationYear, new {@class = "form-control", @placeholder = "yyyy"})
                        @Html.ValidationMessageFor(m => m.PublicationYear)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NumberInStock)
                        @Html.TextBoxFor(m => m.NumberInStock, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.NumberInStock)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ShelveNumber)
                        @Html.TextBoxFor(m => m.ShelveNumber, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.ShelveNumber)
                    </div>

                    <button class="btn btn-primary" type="submit">Save book record &raquo;</button>
                </div>
            
                

                </div>

           


           

        }
    </article>
</div>


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
